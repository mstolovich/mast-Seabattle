<h2 >Make your turn. </h2>
<h3>Chose a cell:</h3>

<form action="/seabattle" method="post">  
    <div class="input-field">
        <input name="x" placeholder="X value 0-9:" required pattern="[0-9]">
        <input name="y" placeholder="Y value 0-9:" required pattern="[0-9]">
    </div>
    <button type="submit" class="waves-effect waves-light btn"><b>FIRE</b></button>
</form>

<h4>New game:</h4>
<form action="/newgame" method="GET">   
  <button class="waves-effect waves-light btn">Start</button>
</form>


<h4>Actions:</h4>
<ul class="collection" id="list">
  {{#each messages}}
    <li class="collection-item">{{this}}</li>
  {{/each}}
</ul>
</ul>